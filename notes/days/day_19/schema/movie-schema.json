{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "title": "Movie",
    "type": "object",
    
    "properties": {
      "name": {
        "type": "string"
      },
      "genre": {
        "type": "string",
        "enum": ["Comedy", "Drama", "Action", "Horror"]
      },
      "phone": {
        "type": "string"
      },      
      "inTheaters": {
        "type": "boolean"
      }
    },
    "required": [
        "name", "genre", "phone"
    ]
  }
